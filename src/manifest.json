{
  "manifest_version": 3,
  "name": "Trendnow Extension",
  "description": "트렌드나우 크롬 확장 프로그램",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_icon": "tn32.png"
  },
  "icons": {
    "128": "tn120.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "tn120.png",
        "tn32.png",
        "aiStar.gif",
        "gold.png",
        "silver.png",
        "bronze.png",
        "PretendardVariable.woff2"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["https://api.trendnow.me/*"]
}
